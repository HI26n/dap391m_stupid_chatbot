  "learning_outcomes": {
    "clos": [
      { "clo_id": "CLO1", "description": "Describe basic properties and find the limit of a function." },
      { "clo_id": "CLO2", "description": "Calculate derivatives of a function." },
      { "clo_id": "CLO3", "description": "Use derivatives to analyze a function and to solve applications." },
      { "clo_id": "CLO4", "description": "Calculate integrals and find area under the graph of a function." },
      { "clo_id": "CLO5", "description": "Solve a system of linear equations using Gaussian elimination." },
      { "clo_id": "CLO6", "description": "Perform basic operations on matrices and manipulate matrix transformations." },
      { "clo_id": "CLO7", "description": "Find the determinant, inverse and diagonalization of a matrix." },
      { "clo_id": "CLO8", "description": "Manipulate vector operations and linear transformations in R3." },
      { "clo_id": "CLO9", "description": "Find the dimension and bases of a subspace." }
    ]
  },

