  "learning_outcomes": {
    "clos": [
      { "clo_id": "CLO1", "description": "Understand the database concepts and database management system software." },
      { "clo_id": "CLO2", "description": "Understand the relational model of data and Algebraic Query Language." },
      { "clo_id": "CLO3", "description": "Understand data normalization and apply normalization techniques in database design." },
      { "clo_id": "CLO4", "description": "Model application data requirements using ER diagrams and design database schemas based on conceptual models." },
      { "clo_id": "CLO5", "description": "Be proficient in SQL including DDL and DML." },
      { "clo_id": "CLO6", "description": "Understand PL/SQL concepts and work with Views, Cursors, Stored Procedures, Functions, and Triggers." },
      { "clo_id": "CLO7", "description": "Apply indexing in database design and query optimization." }
    ]
  },

