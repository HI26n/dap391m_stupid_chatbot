  "description": {
    "overview": "The course covers relational database concepts, foundational knowledge of the SQL language and popular tools for data science. Students will learn data science methodology, data gathering, descriptive statistics, data visualization and basic machine learning.",
    "major_instructional_areas": [
      "Relational database concepts",
      "SQL foundations",
      "Data science methodology",
      "Data gathering and data cleaning",
      "Descriptive statistics",
      "Data visualization",
      "Introductory machine learning"
    ],
    "additional_learning": [
      "Hands-on labs with Python and SQL",
      "Project-based learning"
    ]
  },

