  "learning_outcomes": {
    "clos": [
      { "clo_id": "CLO1", "description": "Understand relational database concepts and foundational knowledge of the SQL language." },
      { "clo_id": "CLO2", "description": "Define an overview of what data science is today." },
      { "clo_id": "CLO3", "description": "Know tools for Data Science and use at least one tool for Data Science." },
      { "clo_id": "CLO4", "description": "Understand data science methodology and why it is needed." },
      { "clo_id": "CLO5", "description": "Discuss Python fundamentals, Python libraries and API support for data science." },
      { "clo_id": "CLO6", "description": "Explain statistics for Data Science including descriptive statistics and visualization." },
      { "clo_id": "CLO7", "description": "Implement a small data science project using Python and data structures." }
    ]
  },

