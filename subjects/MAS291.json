  "clos": [
    {
      "clo_id": "CLO1",
      "clo_name": "Discuss the roles of statistics in engineering",
      "lo_details": [
        "Explain types of reasoning of statistical inference",
        "Distinguish mechanistic and empirical models",
        "Describe methods engineers use to collect data"
      ]
    },
    {
      "clo_id": "CLO2",
      "clo_name": "Identify sample spaces and events and calculate probabilities",
      "lo_details": [
        "Describe sample spaces and events",
        "Calculate probabilities using addition and complementary rules",
        "Apply conditional probability and Bayes theorem",
        "Determine independence of events",
        "Recognize random variables"
      ]
    },
    {
      "clo_id": "CLO3",
      "clo_name": "Describe discrete probability distributions",
      "lo_details": [
        "Check probability mass functions",
        "Compute mean and variance of discrete random variables",
        "Apply binomial, Poisson, geometric and related distributions"
      ]
    },
    {
      "clo_id": "CLO4",
      "clo_name": "Describe continuous probability distributions",
      "lo_details": [
        "Check probability density functions",
        "Compute mean and variance of continuous random variables",
        "Apply uniform, exponential and normal distributions",
        "Standardize normal distributions"
      ]
    },
    {
      "clo_id": "CLO5",
      "clo_name": "Describe data using numerical summaries and visual displays",
      "lo_details": [
        "Construct frequency distributions and histograms",
        "Compute quartiles and box plots",
        "Identify outliers"
      ]
    },
    {
      "clo_id": "CLO6",
      "clo_name": "Apply sampling distributions and Central Limit Theorem",
      "lo_details": [
        "Discuss sampling distributions",
        "Apply CLT to analyze sampling means"
      ]
    },
    {
      "clo_id": "CLO7",
      "clo_name": "Construct confidence intervals",
      "lo_details": [
        "Construct confidence intervals for means",
        "Construct confidence intervals for proportions"
      ]
    },
    {
      "clo_id": "CLO8",
      "clo_name": "Perform hypothesis testing",
      "lo_details": [
        "Formulate hypotheses",
        "Compute test statistics and p-values",
        "Identify types of errors"
      ]
    },
    {
      "clo_id": "CLO9",
      "clo_name": "Construct simple linear regression models",
      "lo_details": [
        "Compute sums of squares",
        "Determine regression equation and correlation",
        "Perform hypothesis testing in regression"
      ]
    }
  ],

