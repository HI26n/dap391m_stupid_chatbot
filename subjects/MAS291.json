  "description": {
    "overview": "This course provides fundamental knowledge of probability and statistics for engineering students, including probability models, probability distributions, descriptive statistics, statistical inference, regression and correlation.",
    "knowledge": [
      "Fundamental principles of probability and their applications",
      "Frequently used probability distributions",
      "Basics of descriptive statistics",
      "Statistical inference: parameter estimation, hypothesis testing, regression and correlation"
    ],
    "skills": [
      "Recognize simple statistical models and apply them to solve engineering problems",
      "Use statistical software such as Excel and Maxima for problem solving",
      "Develop self-study skills"
    ],
    "attitude": [
      "Responsibility in learning",
      "Active participation in statistical problem solving",
      "Independent learning"
    ]
  },

  "prerequisites": [
    "MAE101",
    "MAC101"
  ],

