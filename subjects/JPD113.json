  "description": {
    "overview": "Môn học cung cấp kiến thức, kỹ năng cơ bản của tiếng Nhật ở trình độ sơ cấp 1 (tương đương trình độ A1) cho sinh viên học tiếng Nhật là ngoại ngữ 2 tại trường Đại học.",
    "major_instructional_areas": [
      "Bảng chữ cái tiếng Nhật (Hiragana, Katakana)",
      "Từ vựng cơ bản",
      "Chữ Hán sơ cấp",
      "Ngữ pháp sơ cấp",
      "Hội thoại trong đời sống hằng ngày",
      "Kỹ năng làm việc nhóm và role-play"
    ],
    "additional_learning": [
      "Luyện giao tiếp thực tế",
      "Hoạt động ngoại khóa"
    ]
  },

  "student_tasks": [
    {
      "task": "Tham dự tối thiểu 80% số giờ học trên lớp để đủ điều kiện dự thi cuối môn.",
      "mandatory": true,
      "related_policy": "Attendance policy"
    },
    {
      "task": "Học từ vựng, chuẩn bị bài, làm đầy đủ bài tập và nhiệm vụ do giảng viên giao.",
      "mandatory": true,
      "related_policy": "Coursework policy"
    },
    {
      "task": "Ôn tập bài giảng, đối chiếu với giáo trình để nắm vững kiến thức.",
      "mandatory": true,
      "related_policy": "Self-study requirement"
    },
    {
      "task": "Tích cực tham gia trao đổi, xây dựng bài trên lớp.",
      "mandatory": false,
      "related_policy": "Class participation"
    }
  ],

