  "learning_outcomes": {
    "clos": [
      { "clo_id": "CLO1", "description": "Nhận biết được các ký tự trong hệ thống chữ cái tiếng Nhật (chữ mềm, chữ cứng)." },
      { "clo_id": "CLO2", "description": "Ghi nhớ 200 từ vựng, 23 cấu trúc ngữ pháp, 35 chữ Hán theo các chủ đề đã học." },
      { "clo_id": "CLO3", "description": "Vận dụng từ vựng, mẫu câu, chữ Hán để giao tiếp cơ bản và tự giới thiệu bản thân." },
      { "clo_id": "CLO4", "description": "Đọc được đoạn văn ngắn trình độ sơ cấp bằng tiếng Nhật." },
      { "clo_id": "CLO5", "description": "Rèn luyện kỹ năng làm việc nhóm và phát triển bản thân thông qua hoạt động role-play." }
    ]
  },

